<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.20/owo-ui.xsd">
    <components>
        <flow-layout direction="vertical">
            <children>
                <flow-layout direction="horizontal">
                    <children>
                        <flow-layout direction="horizontal">
                            <children>
                                <button id="avatar-chooser">
                                    <text>Select Avatar</text>

                                    <renderer>
                                        <flat color="black" hovered-color="#333333" disabled-color="#111111"/>
                                    </renderer>
                                </button>

                                <label id="current-avatar-name">
                                    <text>No Avatar Selected</text>

                                    <margins>
                                        <left>20</left>
                                    </margins>
                                </label>
                            </children>

                            <sizing>
                                <horizontal method="fill">50</horizontal>
                            </sizing>
                            <vertical-alignment>center</vertical-alignment>
                        </flow-layout>


                        <flow-layout direction="horizontal">
                            <children>
                                <button id="toggle-gui-scale">
                                    <text>Gui Scale</text>

                                    <renderer>
                                        <flat color="black" hovered-color="#333333" disabled-color="#111111"/>
                                    </renderer>
                                </button>
                            </children>

                            <sizing>
                                <horizontal method="fill">50</horizontal>
                            </sizing>

                            <horizontal-alignment>right</horizontal-alignment>
                            <vertical-alignment>center</vertical-alignment>
                        </flow-layout>
                    </children>

                    <horizontal-alignment>left</horizontal-alignment>

                    <sizing>
                        <horizontal method="fill">100</horizontal>
                        <vertical method="fill">10</vertical>
                    </sizing>

                    <surface>
                        <flat>#55000000</flat>
                    </surface>
                </flow-layout>

                <flow-layout id="avatar-mounting-point" direction="horizontal">
                    <children></children>

                    <sizing>
                        <horizontal method="fill">100</horizontal>
                        <vertical method="fill">90</vertical>
                    </sizing>
                </flow-layout>
            </children>


            <vertical-alignment>top</vertical-alignment>
        </flow-layout>
    </components>
</owo-ui>