{
  "name": "figuraextras",
  "displayName": "FiguraExtras",
  "description": "debugger",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.88.0"
  },
  "categories": [
    "Debuggers"
  ],
  "activationEvents": ["onDebug"],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "figuraextras.debugOnMCClient",
        "title": "FiguraExtras: Debug on Minecraft client"
      }
    ],
    "breakpoints": [
      {
        "language": "lua"
      }
    ],
    "debuggers": [
      {
        "type": "figura",

        "label": "Figura - Lua",

        "configurationAttributes": {
          "required": ["id"],
          "attach": {
            "properties": {
              "id": {
                "type": "string",
                "description": "ID of instance."
              }
            }
          }
        },

        "initialConfigurations": [
          {
            "type": "figura",
            "request": "launch",
            "name": "Debug",
            "id": "e"
          }
        ]
      }
    ]
  },
  "capabilities": {
    "virtualWorkspaces": {
      "supported": false,
      "description": "Debugging is not possible in virtual workspaces."
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.88.0",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "@vscode/test-cli": "^0.0.8",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.57.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "vscode-jsonrpc": "^8.2.0",
    "zod": "^3.22.4"
  }
}
